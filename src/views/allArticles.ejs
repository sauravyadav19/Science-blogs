<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Articles</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <%- include('partials/navbar.ejs') %>

  <!-- Main Content -->
  <div class="container my-5">
    
    <!-- Page Heading -->
 <div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-4 gap-3">
  <!-- Left side: Heading + Subtitle -->
  <div class="text-center text-sm-start">
    <h1 class="fw-bold text-dark mb-2">ðŸ§ª All Articles</h1>
    <p class="text-muted fst-italic mb-0">Explore the latest discussions, discoveries, and ideas</p>
  </div>

  <!-- Right side: Button + Label -->
  <div class="text-center text-sm-end">
    <form action="/article" method="GET">
      <input type="hidden" name="sortingOrder" value="<%= nextSortingOrder %>">
      <button type="submit" class="btn btn-outline-primary fw-semibold shadow-sm w-100 w-sm-auto">
        <i class="bi <%= buttonIcon %>"></i> <%= buttonLabel %>
      </button>
    </form>
    <small class="d-block mt-2 text-muted">
      <i class="bi bi-eye"></i> Currently: <strong><%= currentOrderLabel %></strong>
    </small>
  </div>
</div>
    <div class="row g-4">
      <% if (allArticle.length === 0) { %>
        <div class="col-12 text-center">
          <div class="alert alert-info shadow-sm rounded-3">
            No articles found. Be the first to create one!
          </div>
        </div>
      <% } else { %>
        <% allArticle.forEach(article => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow">
              
              <!-- Card Body -->
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold text-dark"><%= article.title %></h5>
                <p class="card-text text-muted small flex-grow-1">
                  <%= article.body.substring(0, 120) %>...
                </p>
                <% if (article.image && article.image.thumbnail) { %>
                      <img src="<%= article.image.thumbnail %>" alt="Article image" class="img-fluid rounded mb-2">
                <% } else { %>
                    <p>this is image</p>
                <% } %>
                <a href="/article/<%= article._id %>" class="btn btn-outline-primary mt-2 align-self-start">
                  Read More <i class="bi bi-arrow-right"></i>
                </a>
              </div>
              
              <!-- Card Footer -->
              <div class="card-footer bg-light border-0 small d-flex justify-content-between align-items-center">
                <span class="badge bg-success">
                  <%= article.author?.username || "Anonymous" %>
                </span>
                <span class="text-muted">
                  <i class="bi bi-clock"></i> <%= article.createdAt?.toDateString() %>
                </span>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS + Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</body>
</html>