<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Articles</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <%- include('partials/navbar.ejs') %>
  <!-- Main Content -->
  <div class="container my-5">
    <h1 class="mb-4 text-center">All Articles</h1>

    <div class="row g-4">
      <% if (allArticle.length === 0) { %>
        <div class="col-12 text-center">
          <div class="alert alert-warning">No articles found. Be the first to create one!</div>
        </div>
      <% } else { %>
        <% allArticle.forEach(article => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title"><%= article.title %></h5>
                <p class="card-text text-muted">
                  <%= article.body.substring(0, 100) %>...
                </p>
                <a href="/article/<%= article._id %>" class="btn btn-primary btn-sm">Read More</a>
              </div>
              <div class="card-footer text-muted small">
                Posted by <%= article.author?.username || "Anonymous" %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>