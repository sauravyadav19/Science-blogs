<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Article</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%-include('partials/navbar.ejs')%>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">

        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Article</h3>
          </div>
          <div class="card-body">
            
            <!-- Article Form -->
            <form action="/article" method="POST" class="needs-validation" novalidate>
              
              <!-- Title -->
              <div class="mb-3">
                <label for="title" class="form-label">Article Title</label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="title" 
                  name="title" 
                  placeholder="Enter your article title" 
                  required>
                <div class="invalid-feedback">
                  Please provide a valid title.
                </div>
              </div>

              <!-- Body -->
              <div class="mb-3">
                <label for="body" class="form-label">Article Body</label>
                <textarea 
                  class="form-control" 
                  id="body" 
                  name="body" 
                  rows="6" 
                  placeholder="Write your article content here..." 
                  required></textarea>
                <div class="invalid-feedback">
                  Article body cannot be empty.
                </div>
              </div>

              <!-- Author -->
              <div class="mb-3">
                <label for="author" class="form-label">Author ID</label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="author" 
                  name="author" 
                  placeholder="Enter your user ID" 
                  required>
                <div class="invalid-feedback">
                  Author ID is required.
                </div>
              </div>

              <!-- Buttons -->
              <div class="d-flex justify-content-between">
                <a href="/article" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Publish</button>
              </div>

            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Bootstrap Form Validation Script -->
  <script>
    // Bootstrap validation
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>
</body>
</html>