<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Article</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    html, body {
      height: 100%;
      background-color: #f8f9fa;
    }

    .editor-container {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      padding: 2rem;
    }

    .editor-card {
      flex: 1;
      display: flex;
      flex-direction: column;
      max-width: 900px;
      width: 100%;
      margin: 0 auto;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
      padding: 2rem;
    }

    #title {
      font-size: 2rem;
      font-weight: 600;
      border: none;
      outline: none;
      width: 100%;
      margin-bottom: 1.5rem;
    }

    #body {
      flex: 1;
      border: none;
      outline: none;
      font-size: 1.1rem;
      line-height: 1.6;
      resize: none;
      width: 100%;
    }

    /* Sticky footer buttons */
    .editor-footer {
      display: flex;
      justify-content: flex-end;
      gap: 1rem;
      margin-top: 1.5rem;
    }

    /* Remove input borders on focus for clean look */
    input:focus, textarea:focus {
      box-shadow: none;
      border-color: #ced4da;
    }

    @media (max-width: 576px) {
  .editor-container {
    padding: 1rem;
  }

  .editor-card {
    padding: 1rem;
  }

  #title {
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  #body {
    font-size: 1rem;
    line-height: 1.4;
    min-height: 250px;
  }

  .editor-footer {
    flex-direction: column;
    gap: 0.5rem;
  }
  .editor-footer button,
  .editor-footer a {
    width: 100%;
  }
    }
  </style>
</head>
<body>

  <%- include('partials/navbar.ejs') %>

  <div class="editor-container">
    <form action= <%=`/article/${id}?_method=PATCH` %> method="POST" class="needs-validation d-flex flex-column" enctype="multipart/form-data" novalidate>
      <div class="editor-card">

        <!-- Title -->
        <input
          id = "title"
          type="text" 
          name="title" 
          placeholder="Your article title..."
          value= "<%=article.title%>"
          required
          class="form-control">
        <div class="invalid-feedback">
          Please provide a valid title.
        </div>

        <!-- Body -->
        <textarea 
          id ="body"
          name="body" 
          placeholder="Start writing your article here..." 
          required
          class="form-control"><%=article.body%></textarea>
        <div class="invalid-feedback">
          Article body cannot be empty.
        </div>
        <% if(article.image && article.image.path ) { %>
        <div>
          <img src = "<%= `${article.image.thumbnail}`%> " class = "img-thumbnail" style="max-height: 200px; max-width: 200px;">
        </div>
        <% } %>
        <div class="form-check mb-3">
  <input class="form-check-input" type="checkbox" id="changeImage" name="changeImage">
  <label class="form-check-label" for="changeImage">
    Change / Remove Image
  </label>
</div>

<!-- File Input (hidden by default) -->
<div id="imageUploadGroup" class="mb-3" style="display: none;">
  <label for="articleImage" class="form-label">Upload New Image (leave empty to remove image)</label>
  <input type="file" class="form-control" id="articleImage" name="articleImage" accept="image/*" disabled>
</div>

<script>
  const checkbox = document.getElementById("changeImage");
  const uploadGroup = document.getElementById("imageUploadGroup");
  const fileInput = document.getElementById("articleImage");

  checkbox.addEventListener("change", () => {
    if (checkbox.checked) {
      uploadGroup.style.display = "block";
      fileInput.disabled = false;
    } else {
      uploadGroup.style.display = "none";
      fileInput.disabled = true;
      fileInput.value = ""; // reset file if unchecked
    }})
</script>

        <!-- Buttons -->
        <div class="editor-footer">
          <a href="/article" class="btn btn-outline-secondary fw-semibold">
            <i class="bi bi-x-circle me-1"></i>Cancel
          </a>
          <button type="submit" class="btn btn-primary fw-semibold">
            <i class="bi bi-check-circle me-1"></i>Publish
          </button>
        </div>

      </div>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Bootstrap Form Validation Script -->
  <script>
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>

</body>
</html>